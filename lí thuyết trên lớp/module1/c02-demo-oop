    class Student {
        // Hàm đặc biệt, dùng dể khai báo thuộc tính. Được gọi khi khởi tạo đối tượng.
        constructor( name, age, gender ) {
            this.name = name;
            this.age = age;
            this.gender = gender;
        }
        // getter : Trả về giá trị của thuộc tính.
        getName(){
            return this.name;
        }
        getAge(){
            return this.age;
        }
        // Setter: Gán lại giá trị mới cho thuộc tính.
        setName( name ){
            this.name = name;
        }
        setAge( age ){
            this.age = age;
        }
        study (){
            console.log("Đang học bài!");
        }
        playSport( type ){
            console.log("Đang chơi thể thao! : " + type);
        }
    }
    let student1 = new Student( "Chiến", 18, "Nam" );
    student1.setName(" Lĩnh ");
    console.log( student1 );
    // Student.prototype.phuong = "ABC";
    let student2 = new Student( "Chiến", 18, "Nam" );
    console.log(student2);


