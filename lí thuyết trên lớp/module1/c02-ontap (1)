<script>
    function changeImg2() {
        // Truy cập tới phần tử img và lấy gí trị thuộc tính src.
        console.log(document.getElementById("B").getAttribute("src"));
        let imgA = document.getElementById("B").getAttribute("src") ;
        if ( imgA === "image/Hinh1b.png" ){
            document.getElementById("B").src = "image/Hinh2b.png";
        } else if (imgA === "image/Hinh2b.png"){
            document.getElementById("B").src = "image/Hinh3b.png";
        } else {
            document.getElementById("B").src = "image/Hinh1b.png";
        }
        // Gọi lại function check() để kiểm tra 5 bức hình có đúng 1 bộ ko
        check();
    }
    function changeImg1() {
        // Truy cập tới phần tử img và lấy gí trị thuộc tính src.
        console.log(document.getElementById("A").getAttribute("src"));

        let imgA = document.getElementById("A").getAttribute("src") ;
        if ( imgA === "image/Hinh1a.png" ){
            document.getElementById("A").src = "image/Hinh2a.png";
        } else if (imgA === "image/Hinh2a.png"){
            document.getElementById("A").src = "image/Hinh3a.png";
        } else {
            document.getElementById("A").src = "image/Hinh1a.png";
        }

        // Gọi lại function check() để kiểm tra 5 bức hình có đúng 1 bộ ko
        check();

    }
