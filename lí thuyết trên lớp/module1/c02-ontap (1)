    function check() {
        let img1 = document.getElementById("A").getAttribute("src");
        let img2 = document.getElementById("B").getAttribute("src");
        let img3 = document.getElementById("C").getAttribute("src");
        let img4 = document.getElementById("D").getAttribute("src");
        let img5 = document.getElementById("E").getAttribute("src");
        if (   img1 === "image/Hinh1a.png"
            && img2 === "image/Hinh1b.png"
            && img3 === "image/Hinh1c.png"
            && img4 === "image/Hinh1d.png"
            && img5 === "image/Hinh1e.png"
        ) {
            console.log("Lắp được hình 1;")
        }
    }

